void handle_OnConnect()
{
  lights = true;
  mode_of_lights = 0;

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_lightson()
{
  lights = true;
  mode_of_lights = 0;

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_lightsoff()
{
  lights = false;
  mode_of_lights = 10;
  s.write(0);
  s.write(9);

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_normalon()
{
  mode_of_lights = 0;

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_gamingon()
{
  mode_of_lights = 1;

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_studyon()
{
  mode_of_lights = 2;

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_touch()
{
