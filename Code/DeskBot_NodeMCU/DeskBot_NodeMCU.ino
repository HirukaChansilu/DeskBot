  lights = lights;
  mode_of_lights = mode_of_lights;

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_reset()
{
  ESP.restart();

  lights = false;
  mode_of_lights = 10;

  server.send(200, "text/html", SendHTML(lights, mode_of_lights));
}

void handle_NotFound()
{
  server.send(404, "text/plain", "Not found");
}

